<%= form_for(@report) do |f| %>
  <div class="field">
    <%= f.label :chatwork_api %>
    <br>
    <%= f.text_field :chatwork_api_id, value: @chatwork_api.api, disabled: true %>
    <%= link_to "Add new API", new_chatwork_apis_path %>
  </div>
  <div class="field">
    <%= f.label :room %>
    <br>
    <%= f.select :room_id, @rooms.collect { |room| [ room.name, room.id ] } %>
    <%= link_to "Add new Room", new_rooms_path %>
  </div>
  <div class="field">
    <%= f.label :problems %>
    <br>
    <%= f.text_area :problems %>
  </div>
  <div class="field">
    <%= f.label :next_day_plan %>
    <br>
    <%= f.text_area :next_day_plan %>
  </div>
  <div class="field">
    <%= f.label :free_comment %>
    <br>
    <%= f.text_area :free_comment %>
  </div>
  <%= f.submit "Send Report", class: "btn btn-primary" %>
<% end %>
