<span id="report" data-infos="<%= @last_report.nil? ? {} : @last_report.to_json %>"></span>
<span id="report_details" data-infos="<%= @report.report_details.to_json %>"></span>
<span id="templates" data-infos="<%= @templates.to_json %>"></span>
<div class="container-fluid" ng-controller="ReportController as $ctrl">
  <%= render "edit_template_modal" %>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fa fa-area-chart"></i>Report form</div>
    <div class="card-body">
      <%= render "form" %>
    </div>
    <div class="card-footer small text-muted"></div>
  </div>
</div>
