<div class="modal fade" id="edit-template-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit template</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Name:</label>
            <input type="text" ng-model="$ctrl.editedTemplate.name" class="form-control">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Content:</label>
            <textarea class="form-control" id="message-text" rows=10
              ng-model="$ctrl.editedTemplate.content"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" ng-if="!$ctrl.editedTemplate.is_default"
          ng-click="$ctrl.deleteTemplate()">Delete</button>
        <button type="button" class="btn btn-primary" ng-if="!$ctrl.editedTemplate.is_default"
          ng-click="$ctrl.saveTemplate()">Save</button>
        <button type="button" class="btn btn-info" ng-click="$ctrl.saveAsTemplate()">Save as</button>
      </div>
    </div>
  </div>
</div>
