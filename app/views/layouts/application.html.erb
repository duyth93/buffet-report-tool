<!DOCTYPE html>
<html>
  <head>
    <title>BuffetReportTool</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body ng-app="app" ng-strict-di class="fixed-nav sticky-footer bg-dark sidenav-toggled" id="page-top">
    <% if current_user %>
      <%= render "layouts/nav" %>
    <% end %>
    <div class="content-wrapper">
      <%= yield %>
      <% if current_user %>
        <%= render "layouts/footer" %>
      <% end %>
    </div>
  </body>
</html>
